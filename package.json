{
  "name": "solid-idp",
  "version": "0.4.1",
  "description": "A stand-alone Solid IDP, used in for instance solid/web-access-control-tests",
  "engineStrict": true,
  "engines": {
    "node": ">= 8.9.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/solid/solid-idp"
  },
  "homepage": "https://github.com/solid/solid-idp",
  "bugs": "https://github.com/solid/solid-idp/issues",
  "main": "./dist/src/index.js",
  "typings": "./dist/src/index.d.ts",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/lodash": "4.14.123",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.0",
    "@types/sinon": "^7.0.11",
    "chai": "^4.2.0",
    "copyfiles": "^2.1.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "rimraf": "~2.6.3",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.0.3",
    "ts-node-dev": "^1.0.0-pre.43",
    "tslint": "~5.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.4.1"
  },
  "author": "Jackson Morgan",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/debug": "^4.1.5",
    "@types/got": "^9.6.5",
    "@types/ioredis": "^4.0.15",
    "@types/koa": "^2.0.48",
    "@types/koa-cors": "0.0.0",
    "@types/koa-router": "^7.0.40",
    "@types/koa-send": "^4.1.2",
    "@types/koa-static": "^4.0.1",
    "@types/koa-views": "^2.0.3",
    "@types/nodemailer": "^6.2.1",
    "@types/uuid": "^3.4.5",
    "bcryptjs": "^2.4.3",
    "ioredis": "^4.9.0",
    "koa-body": "^4.1.0",
    "koa-cors": "0.0.16",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.1",
    "koa-static": "^5.0.0",
    "koa-views": "^6.2.0",
    "mz": "^2.7.0",
    "nodemailer": "^6.3.0",
    "oidc-provider": "michielbdejong/node-oidc-provider-6-custom",
    "solid-oidc-provider": "^6.5.0",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "clean": "rimraf coverage tmp",
    "build": "tsc -p tsconfig.json && npm run copy-template",
    "watch": "tsc --watch --preserveWatchOutput -p tsconfig.json",
    "dev": "ts-node-dev --project \"tsconfig.json\" examples/koa.ts",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "mocha": "ts-mocha -p \"tsconfig.json\" test/**/*.ts",
    "coverage": "nyc ts-mocha -p \"tsconfig.json\" test/**/*.ts",
    "start": "DEBUG=* HTTPS=1 PORT=443 node dist/src/server.js",
    "test": "npm run lint && npm run mocha",
    "copy-template": "copyfiles ./src/**/*.ejs ./dist && copyfiles ./src/**/*.css ./dist",
    "preversion": "npm test && npm run build",
    "postversion": "git push origin master --follow-tags",
    "prepublishOnly": "npm test && npm run build"
  }
}
